<h1>Edit <%= @recipe.name %> </h1>
  <form method="POST" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h4>Recipe Name:<input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>"></h4>
    <h4>Recipe Ingredients:<input id="ingredients" type="text" name="recipe[ingredients]" value="<%=@recipe.ingredients%>"></h4>
    <h4>Recipe Cook Time(mins):<input id="cook_time" type="number" name="recipe[cook_time]" value="<%=@recipe.cook_time%>"></h4>
    <input type="submit" value="submit">
  </form>