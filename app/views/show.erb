<h1> <%= @recipe.name %> </h1>
  <h3>Ingredients</h3>
  <p> <%= @recipe.ingredients %> </p>
  <h3>Cook Time</h3>
  <p> <%= @recipe.cook_time %> minutes </p>
  <a href="/recipes/<%= @recipe.id %>/edit">Edit <%= @recipe.name %></a><br>
  </br>
  <form method="POST" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <button type="submit" value="delete"> Remove <%= @recipe.name %> </button>
  </form>